@model GetByIdAdDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_UIHeadComponentPartial")
<body>

    @await Component.InvokeAsync("_UINavbarComponentPartial")

    <div class="hero-wrap" style="background-image: url('/royalestate-master/images/bg_1.jpg');">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="index.html">Ana Sayfa</a></span> <span class="mr-2"><a href="blog.html">Emlak</a></span> <span>Detay</span></p>
                    <h1 class="mb-3 bread">Emlak Detayı</h1>
                </div>
            </div>
        </div>
    </div>


    <section class="ftco-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="row">
                        <div class="col-md-12 ftco-animate">
                            <div class="single-slider owl-carousel">
                                <div class="item">
                                    <div class="properties-img" style="background-image: url(@Model.Image1);"></div>
                                </div>
                                <div class="item">
                                    <div class="properties-img" style="background-image: url(@Model.Image2);"></div>
                                </div>
                                <div class="item">
                                    <div class="properties-img" style="background-image: url(@Model.Image3);"></div>
                                </div>
                                <div class="item">
                                    <div class="properties-img" style="background-image: url(@Model.Image4);"></div>
                                </div>
                                <div class="item">
                                    <div class="properties-img" style="background-image: url(@Model.Image5);"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 Properties-single mt-4 mb-5 ftco-animate">
                            <h2>@Model.AdTitle</h2>
                            <p class="rate mb-4">
                                <span class="loc"><a href="#"><i class="icon-map"></i> @Model.Location</a></span>
                            </p>
                            <p>@Model.Description1</p>
                            <div class="d-md-flex mt-5 mb-5">
                                <ul>
                                    <li><span>Alan m2: </span> @Model.SquareMeter</li>
                                    <li><span>Yatak Odası: </span> @Model.BedRooms</li>
                                    <li><span>Banyo: </span> @Model.BathRooms</li>
                                    <li><span>Garaj: </span> @Model.Garage</li>
                                </ul>
                                <ul class="ml-md-5">
                                    <li><span>Ücret: </span> @Model.Price ₺</li>
                                    <li><span>Yapım Yılı: </span> @Model.BuildYear</li>
                                    <li><span>Yaşı: </span> @Model.BuildAge</li>
                                    <li><span>Durumu: </span> @Model.AdStiuation</li>
                                </ul>
                            </div>
                            <p> @Model.Description2</p>
                        </div>
                        <div class="col-md-12 properties-single ftco-animate mb-5 mt-4">
                            <h3 class="mb-4">Bir Tura Çık</h3>
                            <div class="block-16">
                                <figure>
                                    <img src="@Model.ImageURL" alt="Image placeholder" class="img-fluid">
                                    <a href="@Model.VideoUrl" class="play-button popup-vimeo"><span class="icon-play"></span></a>
                                </figure>
                            </div>
                        </div>



                    </div>
                </div> <!-- .col-md-8 -->
                <div class="col-lg-4 sidebar ftco-animate">
                    
                    <div class="sidebar-box ftco-animate">
                        <div class="categories">
                            <h3>Kategorisi</h3>
                            <li><a href="#">@Model.CategoryName </a></li>
                        </div>
                    </div>



                    <div class="sidebar-box ftco-animate">
                        <h3>Etiketler</h3>
                        <div class="tagcloud">
                            <a href="#" class="tag-cloud-link">@Model.TagName</a>
                            <a href="#" class="tag-cloud-link">@Model.Tag1</a>
                            <a href="#" class="tag-cloud-link">@Model.Tag2</a>
                            <a href="#" class="tag-cloud-link">@Model.Tag3</a>
                            <a href="#" class="tag-cloud-link">@Model.Tag4</a>
                            <a href="#" class="tag-cloud-link">@Model.Tag5</a>
                        </div>
                    </div>

                    <div class="sidebar-box ftco-animate">
                        <h3>Paragraf</h3>
                        <p>Gayrimenkul sektöründe müşterilerimizin beklentilerini, ihtiyaçlarına ve olanaklarına göre en iyi noktada buluşturarak şatış ve kiralama öncesi ve sonrası en hızlı, güvenilir kaliteli hizmeti sunmaktadır.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @await Component.InvokeAsync("_UIFooterComponentPartial")
    @await Component.InvokeAsync("_UIScriptComponentPartial")
    <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>

</body>
</html>
