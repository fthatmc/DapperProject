@model List<ResultTestimonialDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="white_shd full margin_bottom_30">
    <div class="full graph_head">
        <div class="heading1 margin_0">
            <h2>Referans Listesi</h2>
        </div>
    </div>
    <div class="table_section padding_infor_info">
        <div class="table-responsive-sm">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Resim</th>
                        <th>Adı Soyadı</th>
                        <th>Açıklama</th>
                        <th>Sil</th>
                        <th>Güncelle</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td><img style="width:50px" class="img-responsive rounded-circle" src="@item.ImageUrl" alt="#" /></td>
                            <td>@item.NameSurname</td>
                            <td>@item.Description</td>
                            <td><a href="/Admin/Testimonial/DeleteTestimonial/@item.TestimonialId/" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Admin/Testimonial/UpdateTestimonial/@item.TestimonialId/" class="btn btn-outline-info">Güncelle</a></td>
                        </tr>
                    }


                </tbody>
            </table>

        </div>
        <a href="/Admin/Testimonial/CreateTestimonial/" class="btn btn-outline-success">Ekle</a>
    </div>
</div>

