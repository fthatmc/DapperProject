@model GetByIdAgentDto

@{
    ViewData["Title"] = "UpdateAgent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 mt-5">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">
                <h2>Emlakçı Güncelle</h2>
            </div>
        </div>
        <div class="table_section padding_infor_info">
            <div class="table-responsive-sm">
                <form method="post">
                    <div class="form-group">
                        <input type="hidden" asp-for="AgentId" />
                        <label>Adı Soyadı</label>
                        <input type="text" class="form-control" asp-for="AgentName" />

                    </div>
                    <div class="form-group">
                        <label>Görsel Link</label>
                        <input type="text" class="form-control" asp-for="ImageURL" />
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control" asp-for="Description" cols="10" rows="10"></textarea>
                    </div>
                    <button type="submit" class="btn btn-info">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

